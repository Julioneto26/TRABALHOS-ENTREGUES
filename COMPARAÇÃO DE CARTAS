#include <stdio.h>

int main()
{
    //CADASTRO DE DADOS DA CARTA 01//
    
    char codigo[4];
    printf("Digite o código da carta (Exemplo:A01): \n");
    scanf("%3s", cidade); // Limita a entrada a 3 caracteres para evitar overflow

    char cidade[50];
    printf("Digite o nome da cidade da carta A01: \n");
    scanf("%49s", cidade); // Limita a entrada a 49 caracteres para evitar overflow
    
    int populacao;
    printf("Digite o valor de população da carta A01: \n");
    scanf("%d", &populacao);

    float area;
    printf("Digite o valor de Área da carta A01: \n");
    scanf("%f", &area);

    float pib;
    printf("Digite o valor do PIB da carta A01: \n");
    scanf("%f", &pib);

    int pontosTuristicos;
    printf("Digite o número de pontos turísticos da carta A01: \n");
    scanf("%d", &pontosTuristicos);
    
    //CADASTRO DE DADOS DA CARTA 02//
    
    char codigo2[4];
    printf("Digite o código da carta (Exemplo:B02): \n");
    scanf("%3s", cidade); // Limita a entrada a 3 caracteres para evitar overflow
    
    char cidade2[50];
    printf("Digite o nome da cidade da carta B02: \n");
    scanf("%49s", cidade2); // Limita a entrada a 49 caracteres para evitar overflow
    
    int populacao2;
    printf("Digite o valor de população da carta B02: \n");
    scanf("%d", &populacao2);

    float area2;
    printf("Digite o valor de Área da carta B02: \n");
    scanf("%f", &area2);

    float pib2;
    printf("Digite o valor do PIB da carta B02: \n");
    scanf("%f", &pib2);

    int pontosTuristicos2;
    printf("Digite o número de pontos turísticos da carta B02: \n");
    scanf("%d", &pontosTuristicos2);
    
    printf("Cadastrada cidade A01 Dados: \n");
    printf("Nome %s\n", cidade);
    printf("População %d\n", populacao);
    printf("Área %f\n", area);
    printf("PIB %f\n", pib);
    printf("Pontos turisticos %d\n", pontosTuristicos);

    printf("Cadastrada cidade B02 Dados: \n");
    printf("Nome %s\n", cidade2);
    printf("População %d\n", populacao2);
    printf("Área %f\n", area2);
    printf("PIB %f\n", pib2);
    printf("Pontos turisticos %d\n", pontosTuristicos2);

    // Comparação de cartas
    printf("\nComparando as cartas:\n");
    printf("\n Escolha o dado que deseja comparar:\n"); 
    printf("\nComparando as cartas:\n");    
    printf("1. População\n");
    printf("2. Área\n");
    printf("3. PIB\n");
    printf("4. Pontos turísticos\n"); 
    
    int escolha;
    printf("Digite o número da opção escolhida: ");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1:
            if (populacao > populacao2) {
                printf("A carta %s", codigo,"tem uma população maior que a carta%s", codigo2,".\n");
                printf("A carta %s", codigo,"vence!.\n");
            } else if (populacao < populacao2) {
                printf("A carta %s", codigo2,"tem uma população maior que a carta%s", codigo,".\n");
                printf("A carta %s", codigo2,"vence!.\n");
            } else {
                printf("As cartas têm a mesma População. Empate!!!\n");
            }
        case 2:
            if (area > area2) {
                printf("A carta %s", codigo,"tem uma área maior que a carta%s", codigo2,".\n");
            } else if (area < area2) {
                printf("A carta %s", codigo2,"tem uma área maior que a carta%s", codigo,".\n");
            } else {
                printf("As cartas têm a mesma área. Empate!!!\n");
            }
        case 3:
            if (pib > pib2) {
                printf("A carta %s", codigo,"tem um PIB maior que a carta%s", codigo2,".\n");
            } else if (pib < pib2) {
                printf("A carta %s", codigo2,"tem um PIB maior que a carta%s", codigo,".\n");
            } else {
                printf("As cartas têm o mesmo PIB. Empate!!!\n");
            }
        case 4:
            if (pontosTuristicos > pontosTuristicos2) {
                printf("A carta %s", codigo,"tem mais pontos turísticos que a carta%s", codigo2,".\n");
            } else if (pontosTuristicos < pontosTuristicos2) {
                printf("A carta %s", codigo2,"tem mais pontos turísticos que a carta%s", codigo,".\n");
            } else {
                printf("As cartas têm o mesmo número de pontos turísticos. Empate!!!\n");
            }
        default:
            printf("Opção inválida. Por favor, escolha um número entre 1 e 4.\n");
            break;  
    } 

    return 0;
}
