#include <stdio.h>

// Definição de constantes para a quantidade de passos de cada peça
const int BISPO_MOV  = 5;  // Bispo anda 5 casas na diagonal sup.-direita
const int TORRE_MOV  = 5;  // Torre anda 5 casas para a direita
const int RAINHA_MOV = 8;  // Rainha anda 8 casas para a esquerda

int main() {
   
    // 1) BISPO — Movimentação diagonal superior-direita

    // "Cima" e "Direita", pois o jogo não possui movimentação diagonal direta.
    
    printf("Bispo (Diagonal Superior-Direita, %d casas) \n", BISPO_MOV);

    // Loop externo controla os 5 passos
    for (int passo = 1; passo <= BISPO_MOV; passo++) {
        
        // Loop interno executa 2 movimentos básicos por passo
        
        for (int componente = 0; componente < 2; componente++) {
            if (componente == 0) {
                printf("Cima\n");     
            } else {
                printf("Direita\n");  
            }
        }
    }
    printf("\n"); 

    // 2) TORRE — Movimentação para a direita 

    printf("=== Torre (Direita, %d casas) ===\n", TORRE_MOV);

    int i = 0;  // Contador para o while
    while (i < TORRE_MOV) {
        printf("Direita\n");
        i++;  // Incrementa até completar os passos
    }
    printf("\n");


    // 3) RAINHA — Movimentação para a esquerda 
    
    printf("=== Rainha (Esquerda, %d casas) ===\n", RAINHA_MOV);

    int j = 0;  // Contador para o do-while
    if (RAINHA_MOV > 0) {
        do {
            printf("Esquerda\n");
            j++;
        } while (j < RAINHA_MOV);
    }
    printf("\n");

    return 0; 
}